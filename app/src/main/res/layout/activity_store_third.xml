<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_store_third"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/store_background"
    tools:context="android.nekomem.nekoshopping.Store_third">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/store_showcase"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/store_showcase" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/planket_shop"
        android:layout_marginStart="35dp"
        android:layout_marginTop="112dp"
        android:id="@+id/planket"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/popcorn_shop"
        android:layout_marginEnd="32dp"
        android:id="@+id/popcorn"
        android:layout_alignTop="@+id/planket"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sleepwell_shop"
        android:id="@+id/sleepwell"
        android:layout_marginBottom="114dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/planket" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sushi_shop"
        android:id="@+id/sushi"
        android:layout_alignTop="@+id/sleepwell"
        android:layout_alignStart="@+id/popcorn" />

    <TextView
        android:text="big-skep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:id="@+id/textView"
        android:layout_above="@+id/popcorn"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignStart="@+id/planket" />

    <TextView
        android:text="pop-corn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_alignEnd="@+id/popcorn"
        android:layout_marginEnd="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/textView2" />

    <TextView
        android:text="value: 10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/planket"
        android:textColor="#FE7E00"
        android:textSize="16sp"
        android:textStyle="italic|bold"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:text="sleepwell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_above="@+id/sleepwell"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="value: 30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sushi"
        android:layout_alignStart="@+id/textView5"
        android:textColor="#FE7E00"
        android:textSize="16sp"
        android:textStyle="italic|bold"
        android:id="@+id/textView7" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/left"
        android:id="@+id/left"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/right"
        android:id="@+id/right"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/paw_music"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/planket"
        android:layout_marginEnd="14dp"
        android:id="@+id/paw_music" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/symbol3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/symbol3" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/score_panel"
        android:id="@+id/fish_money"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_alignStart="@+id/fish_money"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="casual"
        android:id="@+id/money_left" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_back"
        android:layout_alignParentTop="true"
        android:id="@+id/house_home"
        android:adjustViewBounds="true" />

    <TextView
        android:text="value: 20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FE7E00"
        android:textSize="16sp"
        android:textStyle="italic|bold"
        android:id="@+id/textView4"
        android:layout_below="@+id/popcorn"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="value: 40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textColor="#FE7E00"
        android:textSize="16sp"
        android:textStyle="italic|bold"
        android:layout_below="@+id/sushi"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:text="sushi-wo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_above="@+id/sushi"
        android:layout_toStartOf="@+id/right" />

</RelativeLayout>
